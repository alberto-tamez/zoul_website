---
import MainLayout from "@/layouts/MainLayout.astro";

const title = "Contact Zoul Capital | Private Family Investment Office";
const description =
  "Get in touch with Zoul Capital for inquiries about our investment strategies in real estate, education, and innovative technologies.";
---

<MainLayout
  title={title}
  description={description}
  canonicalPath="/contact"
  ogImage="/contact-og-image.jpg"
  twitterImage="/contact-twitter-image.jpg"
>
  <main class="min-h-screen bg-background-light py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-8">
        <a href="/" class="inline-flex items-center text-primary hover:text-primary-dark">Back to Home</a>
      </div>

      <section class="bg-white rounded-lg shadow-md overflow-hidden" aria-labelledby="contact-heading">
        <div class="px-4 py-5 sm:p-6">
          <h1 id="contact-heading" class="text-2xl font-bold text-foreground mb-4 text-center">Contact Us</h1>
          <p class="text-muted-foreground text-center mb-8">
            Zoul Capital operates exclusively for the Tamez Gonzalez family. For internal inquiries or partnerships aligned with our focus,
            please complete the form below.
          </p>
          <div data-tf-live="01JMZM5QKMX39HSJ5NPN767K78" class="min-h-[600px]"></div>
        </div>
      </section>
    </div>
  </main>

  <script is:inline async src="//embed.typeform.com/next/embed.js"></script>
</MainLayout>
